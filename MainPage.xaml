<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lab10DataBinding.MainPage">

    <StackLayout BackgroundColor="#222222">
        <Frame BackgroundColor="Coral" Padding="24" Margin="10" >
            <Label Text="DataBinding" HorizontalTextAlignment="Center"  FontSize="36"/>
        </Frame>
        <Label Text="DataBinding Views" TextColor="White" FontSize="Title" 
               HorizontalTextAlignment="Center" Padding="30,10,30,10"/>

        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
            <Button x:Name="Item1" Text="ViewToViewDemo" BackgroundColor="SpringGreen"/>
            <Button x:Name="Item2" Text="BindingModeDemo" BackgroundColor="SpringGreen"/>
            

        </StackLayout>
        
        <StackLayout HorizontalOptions="Center">
            <Button x:Name="Item3" Text="ListViewDemo" BackgroundColor="SpringGreen"/>
            <Button x:Name="Item4" Text="PickerDemo" BackgroundColor="SpringGreen"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
